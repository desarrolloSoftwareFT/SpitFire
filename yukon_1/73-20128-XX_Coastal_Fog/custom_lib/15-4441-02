! Part Name:         MAX811
! Alias:             
! Part Type:         VLSI
! Description:       Reset Circuit
! Manufacturer:      Maxim
! Package Style:     4 pin SOT143
! Created:           Jan 29, 2004
! Updated:           Aug 16, 2007
! Programmer:        sama
! Tester:            HP3070
! Processor:         VPU
! Vector Format:     VCL
! Testjet Testable:  yes
! JTAG Device:       no
! Fault coverage:    100%
! Constraints:       
! Cisco Part #:      15-2650-01,15-4067-01,15-4441-01,15-4553-01,15-6924-01

sequential

vector cycle 500u
receive delay 400u

assign GND  to pins 1
assign VCC  to pins 4

assign MRB  to pins 3
assign RSTB to pins 2

power   GND,VCC
inputs  MRB
outputs RSTB

family LVT

vector INIT1
 set MRB  to "0"
 set RSTB to "x"
end vector

vector KEEP1
 set MRB  to "k"
 set RSTB to "x"
end vector

vector MRB_1
 initialize to KEEP1
 set MRB    to "1"
end vector

vector RSTB_0
 initialize to KEEP1
 set RSTB   to "0"
end vector

vector RSTB_1
 initialize to KEEP1
 set RSTB   to "1"
end vector

! *********************************************************************

unit "Reset Circuit test"
 execute INIT1     ! MRB low
 repeat 1200 times ! RSTB remains low
  execute RSTB_0
 end repeat
 execute MRB_1     ! MRB high
 repeat 240 times  ! RSTB low for 140 msec
  execute RSTB_0
 end repeat
 repeat 640 times  ! Dead band
  execute KEEP1
 end repeat
 execute RSTB_1    ! RSTB goes high
end unit

