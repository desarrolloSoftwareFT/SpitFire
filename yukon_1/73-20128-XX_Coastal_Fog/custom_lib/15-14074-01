sequential

set terminators to on
assign  GND to pins 14,20
assign  VCC to pins 28

assign  VOUT to pins 1
assign  X1 to pins 2
assign  X2 to pins 3
assign  ADDR to pins 7,8,9,10
assign  DATA to pins 19,18,17,16,15,13,12,11
assign  CSB  to pins 21
assign  OEB  to pins 22
assign  BATT to pins 24
assign  CEOUT to pins 25
assign  CEIN to pins 26
assign  WEB  to pins 27

assign  WDO  to pins 4
assign  INT  to pins 5
assign  RSTB to pins 6
assign  WDI  to pins 23

family LVT


power GND, VCC

inputs WDI,CEIN,ADDR,WEB,OEB,CSB,RSTB
outputs WDO,INT,CEOUT
bidirectional DATA

nondigital BATT,VOUT,X1,X2

disable DATA  with OEB to "1"
disable DATA  with OEB to "1"
disable DATA  with OEB to "1"
disable DATA  with OEB to "1"
disable DATA  with OEB to "1"
disable DATA  with OEB to "1"
disable DATA  with OEB to "1"
disable DATA  with OEB to "1"

set load on pins 11,12,13,15,16,17,18,19 to pull up
set load on pins 11,12,13,15,16,17,18,19 to pull up


vector INIT
 receive DATA
 set OEB   to "1"
 set CSB   to "1"
 set WEB   to "1"
 set ADDR  to "0000"
 set DATA  to "11111111"
end vector

vector KEEP1
 receive DATA
 set OEB   to "k"
 set CSB   to "k"
 set WEB   to "k"
 set ADDR  to "kkkk"
 set DATA  to "xxxxxxxx"
end vector

vector KEEP2
 drive DATA
 set OEB   to "k"
 set CSB   to "k"
 set WEB   to "k"
 set ADDR  to "kkkk"
 set DATA  to "kkkkkkkk"
end vector

vector OEB_0
 initialize to KEEP2
 set OEB   to "0"
end vector

vector OEB_1
 initialize to KEEP2
 set OEB   to "1"
end vector

vector CSB_0
 initialize to KEEP2
 set CSB   to "0"
end vector

vector CSB_1
 initialize to KEEP2
 set CSB   to "1"
end vector

vector WEB_0
 initialize to KEEP2
 set WEB   to "0"
end vector

vector WEB_1
 initialize to KEEP2
 set WEB   to "1"
end vector

vector ADD_0
 initialize to KEEP2
 set ADDR   to "0000"
end vector

vector ADD_1
 initialize to KEEP2
 set ADDR   to "0001"
end vector

vector ADD_2
 initialize to KEEP2
 set ADDR   to "0010"
end vector

vector ADD_3
 initialize to KEEP2
 set ADDR   to "0011"
end vector

vector ADD_4
 initialize to KEEP2
 set ADDR   to "0100"
end vector

vector ADD_5
 initialize to KEEP2
 set ADDR   to "0101"
end vector

vector ADD_6
 initialize to KEEP2
 set ADDR   to "0110"
end vector

vector ADD_7
 initialize to KEEP2
 set ADDR   to "0111"
end vector

vector ADD_8
 initialize to KEEP2
 set ADDR   to "1000"
end vector

vector ADD_9
 initialize to KEEP2
 set ADDR   to "1001"
end vector

vector ADD_A
 initialize to KEEP2
 set ADDR   to "1010"
end vector

vector ADD_B
 initialize to KEEP2
 set ADDR   to "1011"
end vector

vector ADD_C
 initialize to KEEP2
 set ADDR   to "1100"
end vector

vector ADD_D
 initialize to KEEP2
 set ADDR   to "1101"
end vector

vector ADD_E
 initialize to KEEP2
 set ADDR   to "1110"
end vector

vector ADD_F
 initialize to KEEP2
 set ADDR   to "1111"
end vector

vector RD_01011001
 initialize to KEEP1
 set DATA   to "01011001"
end vector

vector RD_10100110
 initialize to KEEP1
 set DATA   to "10100110"
end vector

vector WR_01011001
 initialize to KEEP2
 set DATA   to "01011001"
end vector

vector WR_10100110
 initialize to KEEP2
 set DATA   to "10100110"
end vector

sub RD(ADDR,RDAT)
 execute OEB_0
 execute CSB_0
 execute ADDR
 execute RDAT
end sub

sub WR(ADDR,WDAT)
 execute CSB_1
 execute WEB_1
 execute ADDR
 execute WDAT
 execute CSB_0
 execute WEB_0
 execute WEB_1
end sub



unit "Test Write Alarm"
 call WR(ADD_1,WR_01011001) !Alarm second = 59s
 call WR(ADD_3,WR_10100110) !Alarm minute = 26m
end unit

unit "Test Read Alarm"
 call RD(ADD_1,RD_01011001) !Alarm second = 59s
 call RD(ADD_3,RD_10100110) !Alarm minute = 26m
end unit

